@using BlazorNotesKtSoft.Models

<ul class="list-group">
    @foreach (var note in Notes)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
                <strong>@note.Title</strong><br />
                <small>@note.Content</small>
            </div>
            <div>
                <button class="btn btn-sm btn-warning me-2" @onclick="() => OnEdit.InvokeAsync(note)">Edit</button>
                <button class="btn btn-sm btn-danger" @onclick="() => OnDelete.InvokeAsync(note.Id)">Delete</button>
            </div>
        </li>
    }
</ul>

@code {
    [Parameter]
    public List<Note> Notes { get; set; }

    [Parameter]
    public EventCallback<Note> OnEdit { get; set; }

    [Parameter]
    public EventCallback<int> OnDelete { get; set; }
}